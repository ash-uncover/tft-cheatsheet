{
    "compilerOptions": {
      "baseUrl": ".",
      "esModuleInterop": true,
      "jsx": "react",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "sourceMap": true,
      "target": "es6",
      "typeRoots": [
        "node_modules/@types"
      ]
    },

    "include": [
      "src/**/*.js",
      "src/**/*.jsx",
      "src/**/*.ts",
      "src/**/*.tsx"
    ],

    "exclude": [
      "node_modules",
      "test",
      ".vscode"
    ]
  }